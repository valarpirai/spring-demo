type Query {
    bookById(id: ID): Book
    getBooks: [Book]
    authorById(id: ID): AuthorWithBooks
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

type AuthorWithBooks {
    id: ID
    firstName: String
    lastName: String
    books: [Book]
}
